<!DOCTYPE html>
<html lang="pt-BR">

<%-include('templates/head')%>

<body>
  <%-include('templates/nav')%>


  <div class="container">
    <hr>
    <h1>Perguntas</h1>
    <hr>
    <a href="/perguntas" class="btn btn-primary">Prguntar</a>
    <hr>
    <% perguntas.forEach(function(perguntas){ %>

    <div class="card">
      <div class="card-body">
        <p><%- perguntas.titulo%></p>
      </div>
      <div class="card-footer">
        <p><%- perguntas.descricao%></p>
        <button class="btn btn-primary">Enviar</button>
      </div>
    </div>


    <% }); %>
  </div>


  <%-include('templates/bootstrap-js')%>
</body>

</html>